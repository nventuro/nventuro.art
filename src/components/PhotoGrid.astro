---
import { getImage } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  photos: CollectionEntry<'photos'>[];
}

const { photos } = Astro.props;

// Load all logo images via import.meta.glob
const logoFiles = import.meta.glob<{ default: ImageMetadata }>('/src/assets/logos/**/*.png', { eager: true });

function toKebabCase(name: string): string {
  return name.toLowerCase().replace(/\s+/g, '-');
}

function getLogoSrc(type: string, name: string): string {
  const key = `/src/assets/logos/${type}/${toKebabCase(name)}.png`;
  const match = logoFiles[key];
  if (!match) {
    throw new Error(`Missing logo file: ${key} (referenced by "${name}")`);
  }
  return match.default.src;
}

// Validate all referenced logos exist at build time
for (const photo of photos) {
  getLogoSrc('manufacturers', photo.data.manufacturer);
  if (photo.data.game) getLogoSrc('games', photo.data.game);
  if (photo.data.faction) getLogoSrc('factions', photo.data.faction);
}

const processedPhotos = await Promise.all(
  photos.map(async (photo) => {
    // Process first photo as thumbnail
    const thumbnail = await getImage({
      src: photo.data.photos[0],
      width: 400,
      format: 'webp',
    });

    // Process all photos at full size for lightbox + small thumbs for carousel
    const fullSizePhotos = await Promise.all(
      photo.data.photos.map((img) =>
        getImage({ src: img, width: 1600, format: 'webp' })
      )
    );
    const thumbPhotos = await Promise.all(
      photo.data.photos.map((img) =>
        getImage({ src: img, width: 100, format: 'webp' })
      )
    );

    const manufacturerLogo = getLogoSrc('manufacturers', photo.data.manufacturer);
    const gameLogo = photo.data.game ? getLogoSrc('games', photo.data.game) : null;
    const factionLogo = photo.data.faction ? getLogoSrc('factions', photo.data.faction) : null;

    // Build subtitle HTML for lightbox
    let subtitleParts: string[] = [];

    subtitleParts.push(
      `<span class="meta-item"><img src="${manufacturerLogo}" class="meta-logo" alt="" />${photo.data.manufacturer}</span>`
    );

    if (photo.data.game) {
      subtitleParts.push(
        `<span class="meta-item"><img src="${gameLogo}" class="meta-logo" alt="" />${photo.data.game}</span>`
      );
    }

    if (photo.data.faction) {
      subtitleParts.push(
        `<span class="meta-item"><img src="${factionLogo}" class="meta-logo" alt="" />${photo.data.faction}</span>`
      );
    }

    subtitleParts.push(`<span class="meta-item">${photo.data.scale}</span>`);
    subtitleParts.push(`<span class="meta-item">${photo.data.year}</span>`);

    const subtitle = `<div class="meta-row">${subtitleParts.join('<span class="meta-sep">·</span>')}</div>`;

    const altParts = [photo.data.title, photo.data.manufacturer];
    if (photo.data.game) altParts.push(photo.data.game);
    if (photo.data.faction) altParts.push(photo.data.faction);

    // Build dynamic slides array for lightGallery
    const slides = fullSizePhotos.map((fs, i) => ({
      src: fs.src,
      thumb: thumbPhotos[i].src,
      subHtml: `<h4>${photo.data.title}</h4>${subtitle}`,
    }));

    return {
      id: photo.id,
      title: photo.data.title,
      alt: altParts.join(' — '),
      thumbnail,
      photoCount: photo.data.photos.length,
      slides,
    };
  })
);
---

<div id="gallery" class="photo-grid">
  {processedPhotos.map((photo) => (
    <div
      class="photo-item"
      data-slides={JSON.stringify(photo.slides)}
    >
      <img
        src={photo.thumbnail.src}
        width={photo.thumbnail.attributes.width}
        height={photo.thumbnail.attributes.height}
        alt={photo.alt}
        loading="lazy"
        decoding="async"
      />
      {photo.photoCount > 1 && (
        <span class="photo-count-badge">
          {photo.photoCount}
          <svg class="badge-icon" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="1" y="3" width="10" height="10" rx="1" />
            <path d="M5 3V1.5A.5.5 0 0 1 5.5 1h9a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5H13" />
          </svg>
        </span>
      )}
    </div>
  ))}
</div>

<script>
  import lightGallery from 'lightgallery';
  import lgZoom from 'lightgallery/plugins/zoom';
  import lgThumbnail from 'lightgallery/plugins/thumbnail';

  import 'lightgallery/css/lightgallery.css';
  import 'lightgallery/css/lg-zoom.css';
  import 'lightgallery/css/lg-thumbnail.css';

  const galleryElement = document.getElementById('gallery');
  if (galleryElement) {
    galleryElement.addEventListener('click', (e) => {
      const item = (e.target as HTMLElement).closest('.photo-item');
      if (!item) return;

      const slidesJson = item.getAttribute('data-slides');
      if (!slidesJson) return;

      const slides = JSON.parse(slidesJson);

      const container = document.createElement('div');
      const lg = lightGallery(container, {
        plugins: [lgZoom, lgThumbnail],
        speed: 400,
        licenseKey: '0000-0000-000-0000',
        download: false,
        dynamic: true,
        dynamicEl: slides,
      });

      lg.openGallery(0);
    });
  }
</script>

<style>
  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .photo-item {
    position: relative;
    display: block;
    overflow: hidden;
    border-radius: 4px;
    cursor: pointer;
  }

  .photo-item img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .photo-item:hover img {
    transform: scale(1.03);
  }

  .photo-count-badge {
    position: absolute;
    bottom: 8px;
    right: 8px;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    font-size: 0.875rem;
    padding: 5px 10px;
    border-radius: 999px;
    pointer-events: none;
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }

  .badge-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    display: block;
  }
</style>

<style is:global>
  .lg-outer .lg-thumb-item {
    border-color: transparent !important;
  }

  .lg-outer .lg-thumb-item.active,
  .lg-outer .lg-thumb-item:hover {
    border-color: rgba(255, 255, 255, 0.85) !important;
  }

  .meta-row {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.25rem 0;
  }

  .meta-item {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
  }

  .meta-logo {
    width: 18px;
    height: 18px;
    object-fit: contain;
    vertical-align: middle;
  }

  .meta-sep {
    margin: 0 0.5rem;
    opacity: 0.5;
  }
</style>
